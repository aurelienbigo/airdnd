      <%= link_to '', '', class: "fa fa-star full-star" %>
      <%= link_to '', '', class: "fa fa-star full-star" %>
      <%= link_to '', '', class: "fa fa-star grey-star" %>
      <%= link_to '', '', class: "fa fa-star grey-star" %>
      <%= link_to '', '', class: "fa fa-star grey-star" %>
    <% elsif review.rating == 3 %>
      <%= link_to '', '', class: "fa fa-star full-star" %>
      <%= link_to '', '', class: "fa fa-star full-star" %>
      <%= link_to '', '', class: "fa fa-star full-star" %>
      <%= link_to '', '', class: "fa fa-star grey-star" %>
      <%= link_to '', '', class: "fa fa-star grey-star" %>
    <% elsif review.rating == 4 %>
      <%= link_to '', '', class: "fa fa-star full-star" %>
      <%= link_to '', '', class: "fa fa-star full-star" %>
      <%= link_to '', '', class: "fa fa-star full-star" %>
      <%= link_to '', '', class: "fa fa-star full-star" %>
      <%= link_to '', '', class: "fa fa-star grey-star" %>
    <% elsif review.rating == 5 %>
      <%= link_to '', '', class: "fa fa-star full-star" %>
      <%= link_to '', '', class: "fa fa-star full-star" %>
      <%= link_to '', '', class: "fa fa-star full-star" %>
      <%= link_to '', '', class: "fa fa-star full-star" %>
      <%= link_to '', '', class: "fa fa-star full-star" %>
<% end %>

  </div>
</div>
