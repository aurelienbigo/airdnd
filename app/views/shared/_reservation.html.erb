
<div class="row reservation">

  <div class="cols-xs-12 col-sm-3 col-md-3 col-lg-3 reservation-name" align="center">
    <p><strong>Ta réservation : </strong></p>
    <p><strong><%= reservation.profile.user.first_name %>
      <%= reservation.profile.user.last_name %></strong></p>
    <p>Du <%= reservation.begin_date %> au <%= reservation.end_date %></p>
    <% if reservation.status == "Terminé" %>
      <%= link_to "Add Review", new_profile_review_path(reservation.profile.id), class: "btn btn-success" %>
    <% end %>
  </div>

  <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3 reservation-body" align="center">
    <p><strong>Description de la mission</strong></p>
    <p><%= reservation.description %></p>
  </div>

  <div class="cols-xs-12 col-sm-3 col-md-3 col-lg-3 user-infos" align="center">
    <p><strong>Sa tête de vainqueur</strong></p>
    <p class="avatar-lg" id="image"><%= image_tag_for_user(reservation.profile.user) %></p>
  </div>

  <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3 reservation-status" align="center">
  <p class="status pending"><%= reservation.status %></p>
    <p class="price"><%= reservation.price %></p>
</div>

</div>



